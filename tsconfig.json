{
  "compilerOptions": {
    "declaration": false,
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "outDir": "dist/js",
    "removeComments": true,
    "esModuleInterop": true,
    "lib": ["dom", "ES2023"]
  },
  "include": ["src/js/*.ts"]
}
